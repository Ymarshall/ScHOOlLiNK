    <script src="{{asset('bundles/sldashbord/plugins/jvectormap/jquery-jvectormap-world-mill-en.js')}}"></script>
    <!-- SlimScroll 1.3.0 -->
    <script src="{{asset('bundles/sldashbord/plugins/slimScroll/jquery.slimscroll.min.js')}}"></script>
