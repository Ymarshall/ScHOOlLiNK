{% extends "SLDashbordBundle:Dashbord:layoutDashbord.html.twig" %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Cours et exercices de {{laMatiere.libelle|upper}}
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('sl_dashbord_homepage') }}"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">Cours et exercices</li>
            </ol>
        </section>



        <!-- Main content -->
        <section class="content">
            {% for message in app.session.flashbag.get('notice') %}
                         <div class="alert alert-success alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h4<i class="icon fa fa-check"></i> Notice!</h4>
                             {{ message }}
                        </div>
                    {% endfor %}
            <div class="row">
                <div class="col-md-3 col-xs-12">
              <a href="{{ path('sl_professeur_ajout_cours_exo')}}" class="btn btn-primary btn-block margin-bottom">AJOUTER</a>

            </div><!-- /.col -->
                <div class="col-md-9 col-xs-12">
                    <!--Start Dashboard Tab 1-->
                    <div id="dashboard-overview" class="row" style="visibility: visible; position: relative;">
                        <div class="col-xs-12">

                            <div class="row">
                                
                                        <div class="box box-solid box-info">

                                            <div class="box-header with-border"">
                                                <h3 class="box-title">
                                                    <span></span>
                                                </h3>
                                                <div class="box-tools pull-right">
                                                    <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Réduire"><i class="fa fa-minus"></i></button>
                                                    <button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Supprimer"><i class="fa fa-times"></i></button>
                                                </div>
                                            </div>
                                            <div class="box-body">
                                                <table class="table">
                                                    <thead>
                                                        
                                                       <tr>
                                                     
                                                            <th>Titre</th>
                                                            <th>Nombre de pages</th>
                                                            <th>Date d'enregistrement</th>
                                                            <th  colspan="2">Action</th>
                                                            
                                                        </tr>
                                                
                                                    </thead>
                                                    <tbody>
                                                        {% for fichiers in lesFichiers %}
                                                        <tr>
                                                            <td><a href="{{ asset(fichiers.fichier.webPath) }}">{{fichiers.libelle}}</a></td>
                                                            <td>{{fichiers.nombrePage}}</td>
                                                            <td>{{fichiers.dateEnregistrement|date('d-m-Y')}}</td>
                                                            <td><a href="{{ path('sl_professeur_modifier_cours_exo',{'id': fichiers.id})}}">Modifier</a></td>
                                                            <td><a href="{{ path('sl_professeur_supprimer_cours_exo',{'id': fichiers.id})}}" onclick="return(confirm('Etes-vous sûr de vouloir supprimer cette entrée?'));">Supprimer</a></td>
                                                            
                                                        </tr>
                                                         {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="box-footer">
                                            </div>
                                        </div>
                            </div>
                       

                    </div>
                </div>
                <!--End Dashboard Tab 1-->

            </div>
            </div>
            <div class="clearfix"></div>
        </section>
    </div>
    <!--End Dashboard 2 -->
    <div style="height: 40px;"></div>
    {{ parent() }}

{%endblock%}
