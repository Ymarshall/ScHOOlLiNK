{% extends "SLDashbordBundle:Dashbord:layoutDashbord.html.twig" %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Ajouter une note
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('sl_dashbord_homepage') }}"><i class="fa fa-dashboard"></i>Home</a></li>
                <li><a href="{{ path('sl_dashbord_examen_list',{'id':app.session.get('examen')}) }}"><i class="fa fa-dashboard"></i>Examen Blanc</a></li>
                <li class="active">Ajouter</li>
            </ol>
        </section>



        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-3 col-xs-12">
                    <a href="{{ path('sl_dashbord_examen_list',{'id':app.session.get('examen')}) }}" class="btn btn-primary btn-block margin-bottom">RETOUR</a>

                </div><!-- /.col -->
                <div class="col-md-9 col-xs-12">
                    <!--Start Dashboard Tab 1-->
                    <div id="dashboard-overview" class="row" style="visibility: visible; position: relative;">
                        <div class="col-xs-12">

                            <div class="row">

                                <div class="box box-solid box-info">

                                    <div class="box-header with-border">
                  <h3 class="box-title">Formulaire</h3>
                </div>
                                    <div class="box-body">
                                        <table class="table">
                                            <tbody>
                                                {{ form_start(form2, {'attr': {'class': 'form-horizontal'}}) }}

                                                {# Les erreurs générales du formulaire. #}
                                                {{ form_errors(form2) }}

                                     <div class="form-group">
                                        {{ form_label(form2.examen, "l'examen", {'label_attr': {'class': 'control-label'}}) }}
                                        {{ form_errors(form2.examen) }}
                                        {{ form_widget(form2.examen, {'attr': {'class': 'required form-control'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form2.matiere, "Matiere", {'label_attr': {'class': 'control-label'}}) }}
                                        {{ form_errors(form2.matiere) }}
                                        {{ form_widget(form2.matiere, {'attr': {'class': 'required form-control'}}) }}
                                    </div>
                                    
                                    <div class="form-group">
                                        {{ form_label(form2.note, "Note", {'label_attr': {'class': 'control-label'}}) }}
                                        {{ form_errors(form2.note) }}
                                        {{ form_widget(form2.note, {'attr': {'class': 'required form-control'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form2.coefficient, "Coefficient", {'label_attr': {'class': 'control-label'}}) }}
                                        {{ form_errors(form2.coefficient) }}
                                        {{ form_widget(form2.coefficient, {'attr': {'class': 'required form-control'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form2.appreciation, "Appréciation", {'label_attr': {'class': 'control-label'}}) }}
                                        {{ form_errors(form2.appreciation) }}
                                        {{ form_widget(form2.appreciation, {'attr': {'class': 'required form-control'}}) }}
                                    </div>
                                            
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="box-footer">
                                       {{ form_widget(form2.submit, {'attr': {'class': 'btn btn-lg btn-primary'}}) }}
                                            {{ form_end(form2) }}
                                    </div>
                                </div>


                            </div>


                        </div>
                    </div>
                    <!--End Dashboard Tab 1-->

                </div>
            </div>
                <div class="clearfix"></div>
        </section>
    </div>
    <!--End Dashboard 2 -->
    <div style="height: 40px;"></div>
    {{ parent() }}

{%endblock%}
