{% extends "SLDashbordBundle:Dashbord:layoutDashbord.html.twig" %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Scolarité
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('sl_dashbord_homepage') }}"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">Scolarité</li>
            </ol>
        </section>



        <!-- Main content -->
        <section class="content">
            {% for message in app.session.flashbag.get('notice') %}
                         <div class="alert alert-success alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h4<i class="icon fa fa-check"></i> Notice!</h4>
                             {{ message }}
                        </div>
                    {% endfor %}
            <div class="row">
                <div class="col-md-6 col-xs-12 col-lg-6 col-sm-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Versements</h3>
                            <div class="box-tools pull-right">
                        <a class="btn btn-box-tool" download="Sch_fichier_scolarite.xls" href="#" onclick="return ExcellentExport.excel(this, 'example1', 'Sch_fichier');"><i class="fa fa-file-excel-o"></i> &nbsp;exporter</a>
                        <a class="btn btn-box-tool" href="{{ path('sl_admin_add_scolarite',{'type':'versements'}) }}"><i class="glyphicon glyphicon-plus"></i> &nbsp;Ajouter</a>
                            </div>
                        </div><!-- /.box-header -->
                        <div class="box-body padding">
                            <div class="table-responsive mailbox-messages">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>N°</th>
                                            <th>Libéllé</th>
                                            <th>Période</th>
                                            <th>Montant FCFA</th>
                                            {%if is_granted("ROLE_ADMIN") %}
                                            <th>Actions</th>
                                            {%endif%}
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {%for reglement in lesReglements %}
                                            <tr>

                                                <td>{{loop.index}}</td>
                                                <td>{{reglement.libelle}}</a></td>
                                                <td>{{reglement.mois.libelle}}</td>
                                                <td>{{reglement.montant}}</td>
                                                {%if is_granted("ROLE_ADMIN") %}
                                                <td><a href="{{ path('sl_admin_modifier_reglement',{'id': reglement.id})}}"><i class="fa fa-pencil"></i></a></td>
                                                <td><a href="{{ path('sl_admin_supprimer_reglement',{'id': reglement.id})}}" onclick="return(confirm('Etes-vous sûr de vouloir supprimer cette entrée ?'));"><i class="glyphicon glyphicon-remove"></i></a></td>
                                                {%endif%}
                                            </tr>
                                        {%endfor%}
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>N°</th>
                                            <th>Libéllé</th>
                                            <th>Période</th>
                                            <th>Montant FCFA</th>
                                            {%if is_granted("ROLE_ADMIN") %}
                                            <th>Actions</th>
                                            {%endif%}
                                        </tr>
                                    </tfoot>
                                </table><!-- /.table -->
                            </div><!-- /.mail-box-messages -->
                        </div><!-- /.box-body -->

                    </div><!-- /. box -->
                </div><!-- /.col -->
                <div class="col-md-6 col-xs-12 col-lg-6 col-sm-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Frais Annexes</h3>
                            <div class="box-tools pull-right">
                        <a class="btn btn-box-tool" download="Sch_fichier_frais_annexes.xls" href="#" onclick="return ExcellentExport.excel(this, 'example1', 'Sch_fichier');"><i class="fa fa-file-excel-o"></i> &nbsp;exporter</a>
                        <a class="btn btn-box-tool" href="{{ path('sl_admin_add_scolarite',{'type':'frais'}) }}"><i class="glyphicon glyphicon-plus"></i> &nbsp;Ajouter</a>
                            </div>
                        </div><!-- /.box-header -->
                        <div class="box-body padding">
                            <div class="table-responsive mailbox-messages">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>N°</th>
                                            <th>Libéllé</th>
                                            <th>Période</th>
                                            <th>Montant FCFA</th>
                                            {%if is_granted("ROLE_ADMIN") %}
                                            <th>Actions</th>
                                            {%endif%}
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {%for frais in lesFrais %}
                                            <tr>

                                                <td>{{loop.index}}</td>
                                                <td>{{frais.libelle}}</a></td>
                                                <td>{{frais.mois.libelle}}</td>
                                                <td>{{frais.montant}}</td>
                                                {%if is_granted("ROLE_ADMIN") %}
                                                 <td><a href="{{ path('sl_admin_modifier_reglement',{'id': frais.id})}}"><i class="fa fa-pencil"></i></a></td>
                                                <td><a href="{{ path('sl_admin_supprimer_reglement',{'id': frais.id})}}" onclick="return(confirm('Etes-vous sûr de vouloir supprimer cette entrée ?'));"><i class="glyphicon glyphicon-remove"></i></a></td>
                                                {%endif%}
                                            </tr>
                                        {%endfor%}
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>N°</th>
                                            <th>Libéllé</th>
                                            <th>Période</th>
                                            <th>Montant FCFA</th>
                                            {%if is_granted("ROLE_ADMIN") %}
                                            <th>Actions</th>
                                            {%endif%}
                                        </tr>
                                    </tfoot>
                                </table><!-- /.table -->
                            </div><!-- /.mail-box-messages -->
                        </div><!-- /.box-body -->

                    </div><!-- /. box -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </section><!-- /.content -->
    </div>
    <!--End Dashboard 2 -->
    <div style="height: 40px;"></div>
    {{ parent() }}
    <!-- jQuery 2.1.4 -->
    <script src="{{asset('bundles/sldashbord/plugins/jQuery/jQuery-2.1.4.min.js')}}"></script>
    <script src="{{asset('bundles/sldashbord/js/excellentexport.js')}}">
    <script type="text/javascript">
                                                    $(document).ready(function () {
                                                        $("#example1").DataTable({
                                                            "paging": true,
                                                            "lengthChange": false,
                                                            "searching": true,
                                                            "ordering": true,
                                                            "info": true,
                                                            "autoWidth": false
                                                        });
                                                    });
    </script>
{%endblock%}
