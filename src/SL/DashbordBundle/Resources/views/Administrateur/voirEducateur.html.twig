{% extends "SLDashbordBundle:Dashbord:layoutDashbord.html.twig" %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Profile Professeur
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('sl_dashbord_homepage') }}"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">Professeurs</li>
            </ol>
        </section>



       <section class="content">

          <div class="row">
            <div class="col-md-3 col-xs-12">

              <!-- Profile Image -->
              <div class="box box-primary">
                <div class="box-body box-profile">
                  <img class="profile-user-img img-responsive img-circle" src="{{ asset(lEducateur.personne.image.webPath) }}" alt="{{lEducateur.personne.image.alt}}">
                  <h3 class="profile-username text-center">{{lEducateur.personne.nom ~' '~lEducateur.personne.prenoms}}</h3>
                  <p class="text-muted text-center">Educateur</p>

                  <ul class="list-group list-group-unbordered">
                    <li class="list-group-item">
                      <b>Nombre de Classes</b> <a class="pull-right"></a>
                    </li>
                    <li class="list-group-item">
                      <b>Nombre de Matières</b> <a class="pull-right"></a>
                    </li>
                    <li class="list-group-item">
                        <b>Date d'inscription</b> <a class="pull-right">{{lEducateur.personne.dateCreation|date('d-m-Y')}}</a>
                    </li>
                  </ul>

                  <a href="{{ path('professeur_edit', {'id' : lEducateur.id } ) }}" class="btn btn-block btn-primary btn-social"><i class="glyphicon glyphicon-pencil"></i> Modifier  </a>
                </div><!-- /.box-body -->
              </div><!-- /.box -->

              <!-- About Me Box -->
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Informations Personnelles</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <ul class="list-group list-group-unbordered">
                    <li class="list-group-item">
                      <b>Matricule</b> <a class="pull-right"></a>
                    </li>
                    <li class="list-group-item">
                      <b>Nom</b> <a class="pull-right">{{lEducateur.personne.nom}}</a>
                    </li>
                    <li class="list-group-item">
                      <b>Prénoms</b> <a class="pull-right">{{lEducateur.personne.prenoms}}</a>
                    </li>
                    <li class="list-group-item">
                      <b>Téléphone</b> <a class="pull-right">{{lEducateur.personne.telephone}}</a>
                    </li>
                    <li class="list-group-item">
                      <b>Email</b> <a class="pull-right">{{lEducateur.personne.email}}</a>
                    </li>
                    <li class="list-group-item">
                        <b>Date de Naissance</b> <a class="pull-right">{{lEducateur.personne.dateNaissance|date('d-m-Y')}}</a>
                    </li>
                    <li class="list-group-item">
                      <b>Ville</b> <a class="pull-right">{{lEducateur.personne.adresse.ville}}</a>
                    </li>
                    <li class="list-group-item">
                      <b>Commune</b> <a class="pull-right">{{lEducateur.personne.adresse.commune}}</a>
                    </li>
                    <li class="list-group-item">
                      <b>Quartier</b> <a class="pull-right">{{lEducateur.personne.adresse.quartier}}</a>
                    </li>
                    <li class="list-group-item">
                      <b>Adresse</b> <a class="pull-right">{{lEducateur.personne.adresse.adresse}}</a>
                    </li>
                  </ul>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
            <div class="col-md-9">
              <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                  <li class="active"><a href="#classes" data-toggle="tab">Attributions de classes</a></li>
                  <li><a href="#emploi" data-toggle="tab">Emploi du temps</a></li>
                  <li><a href="#attribution" data-toggle="tab">Attribuer une matière</a></li>
                </ul>
                <div class="tab-content">
                  <div class="active tab-pane" id="classes">
                       
                  </div><!-- /.tab-pane -->
                  <div class="tab-pane" id="emploi">
                    <!-- The timeline -->
                    <ul class="timeline timeline-inverse">
                      <!-- timeline time label -->
                      <li class="time-label">
                        <span class="bg-red">
                          10 Feb. 2014
                        </span>
                      </li>
                      <!-- /.timeline-label -->
                      <!-- timeline item -->
                      <li>
                        <i class="fa fa-envelope bg-blue"></i>
                        <div class="timeline-item">
                          <span class="time"><i class="fa fa-clock-o"></i> 12:05</span>
