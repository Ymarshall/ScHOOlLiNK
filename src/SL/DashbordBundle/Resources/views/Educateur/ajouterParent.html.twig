{% extends "SLDashbordBundle:Dashbord:layoutDashbord.html.twig" %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Ajouter un Parent
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('sl_dashbord_homepage') }}"><i class="fa fa-dashboard"></i>Home</a></li>
                 <li><a href="{{ path('sl_professeur_listeeleves', {'nombre': app.session.get('classe_courante') }) }}"><i class="glyphicon glyphicon-list-alt"></i>Mes Classes</a></li>
                 <li><a href="{{ path('sl_educateur_carnet', {'id': app.session.get('eleve_courant') }) }}"><i class="glyphicon glyphicon-book"></i>Carnet de correspondance</a></li>
                 <li class="active">Ajouter un Parent</li>
            </ol>
        </section>



        <!-- Main content -->
        <section class="content">
            
          <div class="row">
            <div class="col-md-2 col-xs-12">
         <a href="{{ path('sl_educateur_carnet', {'id': app.session.get('eleve_courant') }) }}" class="btn btn-block btn-primary btn-social"><i class="glyphicon glyphicon-list"></i> retour</a>
            
            </div><!-- /.col -->
            <div class="col-md-10 col-xs-12">
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Ajouter un Parent</h3>
                 
                </div><!-- /.box-header -->
                <div class="box-body padding">                 
                    <table id="example1" class="table">
                        <tbody>
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                                                {# Les erreurs générales du formulaire. #}
                                                {{ form_errors(form) }}
                                                
                                            
                                            <div class="form-group">
                                                {{ form_label(form.personne, "Identification", {'label_attr': {'class': 'control-label'}}) }}
                                                {{ form_errors(form.personne) }}
                                                {{ form_widget(form.personne, {'attr': {'class': 'required'}}) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_label(form.situationMatri, "Situation Matrimoniale", {'label_attr': {'class': 'control-label'}}) }}
                                                {{ form_errors(form.situationMatri) }}
                                                {{ form_widget(form.situationMatri, {'attr': {'class': 'required form-control'}}) }}
                                            </div>
                        
                    </tbody>
                                            
                </table>
                </div><!-- /.box-body -->
                <div class="box-footer">
                                       {{ form_widget(form.submit, {'attr': {'class': 'btn btn-lg btn-primary'}}) }}
                                            {{ form_end(form) }}
                                    </div>
              </div><!-- /. box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->
    </div>
    <!--End Dashboard 2 -->
    <div style="height: 40px;"></div>
    {{ parent() }}
{%endblock%}
