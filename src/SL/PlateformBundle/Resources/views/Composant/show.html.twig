{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Composant</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Heuredebut</th>
                <td>{{ entity.heureDebut|date('H:i') }}</td>
            </tr>
            <tr>
                <th>Heurefin</th>
                <td>{{ entity.heureFin|date('H:i') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('composant') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('composant_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
