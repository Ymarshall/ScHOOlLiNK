{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ecole list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Datecreation</th>
                <th>Localisation</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Descriptif</th>
                <th>Telephone</th>
                <th>Fax</th>
                <th>Email</th>
                <th>Siteweb</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ecole_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{% if entity.dateCreation %}{{ entity.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.localisation }}</td>
                <td>{{ entity.latitude }}</td>
                <td>{{ entity.longitude }}</td>
                <td>{{ entity.descriptif }}</td>
                <td>{{ entity.telephone }}</td>
                <td>{{ entity.fax }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.siteWeb }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ecole_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ecole_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ecole_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
