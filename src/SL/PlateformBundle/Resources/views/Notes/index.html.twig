{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Notes list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Note</th>
                <th>Coefficient</th>
                <th>Datecompo</th>
                <th>Appreciation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('notes_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.note }}</td>
                <td>{{ entity.coefficient }}</td>
                <td>{% if entity.dateCompo %}{{ entity.dateCompo|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.appreciation }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('notes_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('notes_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('notes_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
